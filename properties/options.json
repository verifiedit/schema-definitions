{
  "$id": "https://github.com/verifiedit/schema-definitions/properties/options",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Options property",
  "description": "List of selectable items",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "label": {
        "type": "string"
      },
      "value": {
        "type": [
          "string",
          "number",
          "boolean"
        ]
      },
      "show": {
        "type": "boolean",
        "enum": [
          false,
          true
        ]
      },
      "colour": {
        "description": "colour of option",
        "type": "string",
        "enum": [
          "blue",
          "green",
          "red"
        ]
      },
      "conditions": {
        "description": "Define conditions which affect the current option.",
        "$ref": "https://github.com/verifiedit/schema-definitions/properties/conditions.json"
      }
    }
  },
  "required": [
    "colour",
    "label",
    "value"
  ]
}
