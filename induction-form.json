{
  "$id": "https://github.com/verifiedit/capture-validate-form-schema/main/induction-form",
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "schema": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "component": {
                "description": "Name of component object",
                "type": [
                  "object",
                  "string"
                ],
                "oneOf": [
                  {
                    "enum": [
                      "AlertBanner",
                      "ChoiceInput",
                      "Heading",
                      "FileLink",
                      "KmartSiteInformation",
                      "Markdown",
                      "MultiChoiceInput",
                      "NumberInput",
                      "PhotoInput",
                      "SignatureInput",
                      "Text",
                      "TextInput",
                      "Viewer"
                    ]
                  }
                ]
              },
              "showChildren": {
                "description": "control the show or hide the children components",
                "type": "boolean"
              },
              "supplementals": {
                "description": "Separated independent inner form.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/supplemental-form.json"
              },
              "conditions": {
                "description": "Define conditions which affect component.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/conditions.json"
              },
              "content": {
                "description": "Displays the instruction to the user as a question or item label.",
                "type": "string"
              },
              "controlPosition": {
                "description": "Show control button(s) at the top or on the bottom of the component.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/control-position.json"
              },
              "question": {
                "description": "Displays the label on other form reports.",
                "type": "string"
              },
              "default": {
                "description": "Default value of this component.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/default.json"
              },
              "parent": {
                "description": "Reference to the parent component, it is a simple identity for grouping multiple components as a group.",
                "type": "string"
              },
              "label": {
                "description": "Caption for the current object",
                "type": "string"
              },
              "min": {
                "description": "Minimum length of value allowed.",
                "type": "number",
                "minimum": 0
              },
              "max": {
                "description": "Maximum length of value allowed.",
                "type": "number"
              },
              "name": {
                "description": "Name of the component. This will be the key when form is submitted. Can contain alphanumeric characters, _ and - but must start with an alpha character or _, and be unique within the document.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/name.json"
              },
              "options": {
                "description": "List the items that the user can select from.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/options.json"
              },
              "placeholder": {
                "description": "Placeholder string for HTML input.",
                "type": "string"
              },
              "readonly": {
                "description": "Is component read only?",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/readonly.json"
              },
              "rules": {
                "description": "Validation rules to apply to the component value. These are required to be valid javascript expressions written as a string.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/rules.json"
              },
              "show": {
                "description": "Should the component show or hide by default.",
                "$ref": "https://raw.githubusercontent.com/verifiedit/capture-validate-form-schema/main/properties/show.json"
              },
              "specialOption": {
                "description": "If selected should clear other selections.",
                "type": "string"
              },
              "type": {
                "description": "If selected should clear other selections.",
                "type": "string",
                "enum": [
                  "number",
                  "tel",
                  "text"
                ]
              },
              "resource": {
                "description": "Can be the file path or base64 object string.",
                "type": "string"
              }
            },
            "anyOf": [
              {
                "if": {
                  "properties": {
                    "component": {
                      "const": "AlertBanner"
                    }
                  }
                },
                "then": {
                  "properties": {
                    "componentStyle": {
                      "enum": [
                        "danger",
                        "information",
                        "success",
                        "warning"
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "component": {
                      "const": "ChoiceInput"
                    }
                  }
                },
                "then": {
                  "properties": {
                    "componentStyle": {
                      "enum": [
                        "button",
                        "checkbox",
                        "radio"
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": {
                    "component": {
                      "const": "TextInput"
                    }
                  }
                },
                "then": {
                  "properties": {
                    "componentStyle": {
                      "enum": [
                        "multiple-lines",
                        "single-line"
                      ]
                    }
                  }
                }
              }
            ],
            "if": {
              "properties": {
                "supplementals": {
                  "type": "array"
                },
                "component": {
                  "const": "null"
                }
              }
            },
            "then": {
              "required": []
            },
            "else": {
              "if": {
                "properties": {
                  "component": {
                    "const": "TextInput"
                  }
                }
              },
              "then": {
                "required": [
                  "component",
                  "name",
                  "placeholder",
                  "readonly",
                  "show"
                ]
              },
              "else": {
                "if": {
                  "properties": {
                    "component": {
                      "const": "MultiChoiceInput"
                    }
                  }
                },
                "then": {
                  "required": [
                    "component",
                    "name",
                    "label",
                    "options",
                    "readonly",
                    "show"
                  ]
                },
                "else": {
                  "if": {
                    "properties": {
                      "component": {
                        "const": "ChoiceInput"
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "component",
                      "name",
                      "label",
                      "options",
                      "readonly",
                      "show",
                      "componentStyle"
                    ]
                  },
                  "else": {
                    "if": {
                      "properties": {
                        "component": {
                          "const": "PhotoInput"
                        }
                      }
                    },
                    "then": {
                      "required": [
                        "component",
                        "name",
                        "content",
                        "min",
                        "max",
                        "controlPosition",
                        "show"
                      ]
                    },
                    "else": {
                      "if": {
                        "properties": {
                          "component": {
                            "const": "Heading"
                          }
                        }
                      },
                      "then": {
                        "required": [
                          "component",
                          "content",
                          "name",
                          "show",
                          "componentStyle"
                        ]
                      },
                      "else": {
                        "if": {
                          "properties": {
                            "component": {
                              "const": "FileLink"
                            }
                          }
                        },
                        "then": {
                          "required": [
                            "component",
                            "name",
                            "show",
                            "resource"
                          ]
                        },
                        "else": {
                          "if": {
                            "properties": {
                              "component": {
                                "const": "Viewer"
                              }
                            }
                          },
                          "then": {
                            "required": [
                              "component",
                              "name",
                              "show",
                              "resource"
                            ]
                          },
                          "else": {
                            "if": {
                              "properties": {
                                "component": {
                                  "const": "Text"
                                }
                              }
                            },
                            "then": {
                              "required": [
                                "component",
                                "content",
                                "name",
                                "show"
                              ]
                            },
                            "else": {
                              "if": {
                                "properties": {
                                  "component": {
                                    "const": "NumberInput"
                                  }
                                }
                              },
                              "then": {
                                "required": [
                                  "component",
                                  "content",
                                  "name",
                                  "show"
                                ]
                              },
                              "else": {
                                "if": {
                                  "properties": {
                                    "component": {
                                      "const": "KmartSiteInformation"
                                    }
                                  }
                                },
                                "then": {
                                  "required": [
                                    "component",
                                    "content",
                                    "name",
                                    "resource",
                                    "show"
                                  ]
                                },
                                "else": {
                                  "if": {
                                    "properties": {
                                      "component": {
                                        "const": "SignatureInput"
                                      }
                                    }
                                  },
                                  "then": {
                                    "required": [
                                      "component",
                                      "name",
                                      "controlPosition",
                                      "show"
                                    ]
                                  },
                                  "else": {
                                    "if": {
                                      "properties": {
                                        "component": {
                                          "const": "Markdown"
                                        }
                                      }
                                    },
                                    "then": {
                                      "required": [
                                        "component",
                                        "content",
                                        "name",
                                        "show"
                                      ]
                                    },
                                    "else": {
                                      "required": [
                                        "component",
                                        "name",
                                        "controlPosition",
                                        "show"
                                      ]
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
